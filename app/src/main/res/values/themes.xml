<resources>
    <!-- Base application theme. -->
    <style name="Theme.MedicationTracker" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Primary Container: Used for selected items, FABs, and light accents -->
        <!-- I calculated a lighter version of your indigo for this -->
        <item name="colorPrimaryContainer">#E0E4FF</item>
        <item name="colorOnPrimaryContainer">#00003E</item>

        <!-- Secondary: Used for less prominent UI elements -->
        <item name="colorSecondary">#343BB5</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">#E1E0F9</item>
        <item name="colorOnSecondaryContainer">#191A2C</item>

        <!-- Modern Backgrounds -->
        <!-- Material 3 uses "Surface" colors instead of pure white -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status Bar Logic (Kept yours, it's good) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Action Bar Wiring -->
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/TitleText</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="TitleText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>